@model IEnumerable<Quest4pet.Models.tblPet>

@*@{
    ViewBag.Title = "Index";
}*@

<h2>Index</h2>

<p>
    <a class="btn btn-info fa fa-pencil" href="@Url.Action("Create","tblPets")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tblCategory.Category_Name)
        </th>
        <th>
            Pet Name
            @*@Html.DisplayNameFor(model => model.Pets_Name)*@
        </th>
        <th>
            Pet Image
        </th>
        <th>
            Pet Description
        </th>
        <th>
            Pet Price
        </th>
        <th></th>
    </tr>

@foreach (var pet in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => pet.tblCategory.Category_Name)
        </td>
        <td>
            @pet.Pets_Name
            @*@Html.DisplayFor(modelItem => item.Pets_Name)*@
        </td>
        <td>
            <img src="@Url.Content(pet.Pets_Image)" width="100" height="100" />
          
        </td>
        <td>
            @pet.Pets_Description
        </td>
        <td>
            @pet.Pets_Price
        </td>
        <td>
            <a class="btn btn-warning fa fa-edit" href="@Url.Action("Edit", new {id=pet.Pets_ID})"></a>
            <a class="btn btn-primary fa fa-book" href="@Url.Action("Details", new {id=pet.Pets_ID})"></a>
            <a class="btn btn-danger fa fa-trash-o" href="@Url.Action("Delete", new {id=pet.Pets_ID})"></a>
        </td>
    </tr>
}

</table>
